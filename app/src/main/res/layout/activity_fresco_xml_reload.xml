<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <Button
        android:id="@+id/xml_bt_xml_reload"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="xml设置加载失败的图片,点击重新加载"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="300dp"
        android:layout_height="200dp"
        fresco:placeholderImage="@mipmap/android_icon"
        fresco:failureImage="@mipmap/img_error"
        fresco:retryImage="@mipmap/img_reload"
        android:id="@+id/xml_reload_iv_show"/>

</LinearLayout>
